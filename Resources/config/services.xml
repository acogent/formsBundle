<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sgn.useful.type.ajax_autocomplete" class="SGN\FormsBundle\Form\Type\AjaxAutocompleteType">
            <tag name="form.type" alias="sgn_ajax_autocomplete" />
            <argument type="service" id="service_container"/>
        </service>
        
        <service id="sgn_forms_crud_twig.twig.forms_crud_twig_extension" class="SGN\FormsBundle\Twig\FormsCrudExtension">
            <tag name="twig.extension" />
            <argument type="service" id="service_container"/>
        </service>

    </services>
    
</container>
