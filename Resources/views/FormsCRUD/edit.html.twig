{% form_theme form 'SGNFormsBundle::forms.table.bootstrap3.html.twig' %}
{{ form_start(form , {'attr': {'id': 'form_edit' }}) }}
    {{ form_errors(form) }}
    {{ form_widget(form) }}
{{ form_end(form) }}

<script>
    function ajaxFormRequest(form)
    {
        $.ajax({
            type:    "POST",
            url:     form.action + 'ajax',
            data:    $(form).serialize()
        })
            .done(function(result){
                jQuery('#editEntity').html(result);
            })
    }
</script>