        myUrl = myUrl.replace('%23', sel_id); // %23 = #
        $.ajax( { url: myUrl , dataType : "html" , cache  : false})
            .done(function(data) {
                jQuery('#editEntity').html( data );
            })
            .fail(function(e, data) {
                alert( "error "+myUrl );
                console.log (e);
            })
            .always(function() {
