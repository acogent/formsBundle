    var last_loaded   = null;
    var wait = "<img src=\"{{ asset('bundles/sgnforms/images/working.gif') }}\" alt=\"working...\" />";

$(document).ready(function() {
    $("#e1").select2({ placeholder: "Choisissez une table ..." });

